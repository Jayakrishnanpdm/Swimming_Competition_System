<Window x:Class="AquaChampPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AquaChamp Pro - Swimming Competition Management System" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource MainBackgroundBrush}">

    <Window.Resources>
        <!-- Brushes -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8F9FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8F9FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RegistrationIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#43a047" Offset="0"/>
            <GradientStop Color="#66bb6a" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="EventsIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#fb8c00" Offset="0"/>
            <GradientStop Color="#ffa726" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SchedulingIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8e24aa" Offset="0"/>
            <GradientStop Color="#ab47bc" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="TimingIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e88e5" Offset="0"/>
            <GradientStop Color="#42a5f5" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="RankingsIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e53935" Offset="0"/>
            <GradientStop Color="#ef5350" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ReportsIconBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#546e7a" Offset="0"/>
            <GradientStop Color="#78909c" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="LogoBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00bcd4" Offset="0"/>
            <GradientStop Color="#2196f3" Offset="1"/>
        </LinearGradientBrush>

        <!-- Styles -->
        <Style x:Key="DashboardCardStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Effect>
                                <DropShadowEffect x:Name="CardShadow"
                                                  Color="Black" 
                                                  Direction="270" 
                                                  ShadowDepth="8" 
                                                  BlurRadius="20" 
                                                  Opacity="0.1"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="CardTransform"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="CardTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="-8"
                                                             Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="CardShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.2"
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="CardTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="0"
                                                             Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="CardShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.1"
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardIconStyle" TargetType="Border">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <Style x:Key="WelcomeTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="WelcomeSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" Padding="30,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="50" Height="50" 
                            Background="{StaticResource LogoBrush}" 
                            CornerRadius="12" 
                            Margin="0,0,15,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#00bcd4" Direction="270" ShadowDepth="4" BlurRadius="15" Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Text="AC" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AquaChamp Pro" 
                                   FontSize="28" 
                                   FontWeight="Light" 
                                   Foreground="#2c3e50"/>
                        <TextBlock Text="Swimming Competition Management System" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📅 June 20, 2025" 
                               Foreground="#2c3e50" 
                               Margin="0,0,15,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="👤 Administrator" 
                               Foreground="#2c3e50" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Welcome Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="Welcome to AquaChamp Pro" Style="{StaticResource WelcomeTitleStyle}"/>
                    <TextBlock Text="Streamline your swimming competition management with professional tools" 
                               Style="{StaticResource WelcomeSubtitleStyle}"/>
                </StackPanel>

                <!-- Dashboard Cards Grid -->
                <UniformGrid Columns="3" MaxWidth="1200" HorizontalAlignment="Center">

                    <!-- Athlete Registration Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="RegistrationCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource RegistrationIconBrush}">
                                <TextBlock Text="👥" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Athlete Registration" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Register athletes, manage participant details, and handle event enrollment" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                    <!-- Event Management Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="EventsCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource EventsIconBrush}">
                                <TextBlock Text="🏊‍♂️" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Event Management" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Configure events, set age groups, and manage competition formats" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                    <!-- Event Scheduling Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="SchedulingCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource SchedulingIconBrush}">
                                <TextBlock Text="📅" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Event Scheduling" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Generate automated schedules and manage competition timeline" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                    <!-- Time Recording Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="TimingCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource TimingIconBrush}">
                                <TextBlock Text="⏱️" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Time Recording" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Record race times, manage heats, and track performance data" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                    <!-- Rankings & Results Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="RankingsCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource RankingsIconBrush}">
                                <TextBlock Text="🏆" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Rankings &amp; Results" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Generate rankings, select finalists, and calculate championship points" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports & Awards Card -->
                    <Button Style="{StaticResource DashboardCardStyle}" Click="ReportsCard_Click">
                        <StackPanel>
                            <Border Style="{StaticResource CardIconStyle}" Background="{StaticResource ReportsIconBrush}">
                                <TextBlock Text="📊" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Reports &amp; Awards" Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Generate competition reports and manage individual &amp; club championships" 
                                       Style="{StaticResource CardDescriptionStyle}"/>
                        </StackPanel>
                    </Button>

                </UniformGrid>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#33FFFFFF" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Athletes: " Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock x:Name="AthleteCountText" Text="0" Foreground="White" FontWeight="SemiBold" Margin="0,0,30,0"/>

                    <TextBlock Text="Events: " Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock x:Name="EventCountText" Text="0" Foreground="White" FontWeight="SemiBold" Margin="0,0,30,0"/>

                    <TextBlock Text="Active Competition: " Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ActiveCompetitionText" Text="None" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Database: Connected | Version 1.0.0" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>