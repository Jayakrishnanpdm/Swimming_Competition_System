<Window x:Class="SwimmingCompetitionManager.AthleteRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Athlete Registration"
        Height="750" Width="900"
        Background="#F0F8FF"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" Margin="20" Padding="25"
                CornerRadius="10" BorderBrush="#007ACC" BorderThickness="1">
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Athlete Registration" FontSize="32" FontWeight="Bold"
                           Foreground="#007ACC" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Personal Info -->
                <GroupBox Header="Personal Information" Margin="0 0 0 20" FontWeight="Bold" BorderBrush="#007ACC">
                    <UniformGrid Columns="2" Rows="4" Margin="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="First Name"/>
                            <TextBox x:Name="txtFirstName"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Middle Name"/>
                            <TextBox x:Name="txtMiddleName"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Last Name"/>
                            <TextBox x:Name="txtLastName"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Gender"/>
                            <ComboBox x:Name="cmbGender">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                                <ComboBoxItem Content="Boy"/>
                                <ComboBoxItem Content="Girl"/>
                                <ComboBoxItem Content="Transgender"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Date of Birth"/>
                            <DatePicker x:Name="dpDOB"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Age (Years)"/>
                            <TextBox x:Name="txtAgeYears"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Age (Months)"/>
                            <TextBox x:Name="txtAgeMonths"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <!-- Contact & ID Info -->
                <GroupBox Header="Contact and ID Details" Margin="0 0 0 20" FontWeight="Bold" BorderBrush="#007ACC">
                    <UniformGrid Columns="2" Rows="2" Margin="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="UID Number"/>
                            <TextBox x:Name="txtUID"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="WhatsApp Number"/>
                            <TextBox x:Name="txtWhatsApp"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Email ID"/>
                            <TextBox x:Name="txtEmail"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <!-- Club & Category -->
                <GroupBox Header="Club and Category Info" Margin="0 0 0 20" FontWeight="Bold" BorderBrush="#007ACC">
                    <UniformGrid Columns="2" Rows="2" Margin="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="Club ID"/>
                            <TextBox x:Name="txtClubID"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Category ID"/>
                            <TextBox x:Name="txtCategoryID"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Register" Width="120" Height="40" Margin="10"
                            Background="#007ACC" Foreground="White"
                            Click="Register_Click"/>
                    <Button Content="Clear" Width="120" Height="40" Margin="10"
                            Background="White" Foreground="#007ACC" BorderBrush="#007ACC"
                            Click="Clear_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
